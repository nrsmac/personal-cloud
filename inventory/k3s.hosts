[all:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no'
k3s_token=secret
k3s_master_ip=10.0.0.200

[master_nodes]
master ansible_ssh_host=10.0.0.200 ansible_ssh_port=22 ansible_user=k3su ansible_ssh_private_key_file=./ssh/k3s node_ip=10.0.0.200

[master_nodes:vars]
pod_network_cidr=10.0.0.0/24
k3s_config_file=/tmp/k3s-config.yaml

[worker_nodes]
worker1 ansible_ssh_host=10.0.0.210 ansible_ssh_port=22 ansible_user=k3su ansible_ssh_private_key_file=./ssh/k3s node_ip=10.0.0.210
worker2 ansible_ssh_host=10.0.0.211 ansible_ssh_port=22 ansible_user=k3su ansible_ssh_private_key_file=./ssh/k3s node_ip=10.0.0.211
